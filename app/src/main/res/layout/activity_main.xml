<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/numberGroup"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/customRed"
            android:textSize="40sp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numberGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <EditText
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:autofillHints="Number 1"
            android:hint="@string/hint1"
            android:inputType="number"
            android:textColorHint="@color/customPink"
            android:textColor="@color/customRed"
            android:textSize="18sp"
            tools:ignore="LabelFor"
            android:maxLength="6"/>

        <EditText
            android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="Number 2"
            android:hint="@string/hint2"
            android:inputType="number"
            android:textColorHint="@color/customPink"
            android:textColor="@color/customRed"
            android:textSize="18sp"
            tools:ignore="LabelFor"
            android:maxLength="6"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/customGreen"
            android:text="@string/add"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/customGreen"
            android:text="@string/subtract"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/customGreen"
            android:text="@string/multiply"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/customGreen"
            android:text="@string/divide"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </GridLayout>


</RelativeLayout>